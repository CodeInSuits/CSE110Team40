<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#90c3d4"
    tools:context="com.vapenaysh.jace.myapplication.HomePage">



    <com.dd.processbutton.FlatButton
        android:layout_marginTop="30dp"
        android:id="@+id/add_fave_loc_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_loc_btn"
        android:textColor="@android:color/white"
        custom:pb_colorNormal="#FE8D8D"
        custom:pb_colorPressed="#FC2C2C" />

    <com.dd.processbutton.FlatButton
        android:id="@+id/partner_setting_btn"
        android:text="@string/partner_settings"
        android:layout_marginTop="20dp"
        android:layout_below="@id/add_fave_loc_btn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        custom:pb_colorNormal="#FE8D8D"
        custom:pb_colorPressed="#FC2C2C" />


    <!--
    <Button
        android:id="@+id/see_loc_history"
        style="@style/HomepageButton"
        android:layout_below="@id/partner_setting_btn"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/see_loc_history"
        android:onClick="seePartnerHistory" />
    -->

    <com.dd.processbutton.iml.ActionProcessButton
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/logout"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Sign Out"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        custom:pb_colorComplete="@color/green_complete"
        custom:pb_colorNormal="#FE8D8D"
        custom:pb_colorPressed="#FC2C2C"
        custom:pb_colorProgress="@color/purple_progress"
        custom:pb_textComplete="Success"
        custom:pb_textProgress="Logging Out..."
        custom:pb_textError="Error"
        custom:pb_colorError="@color/red_error" />
<!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test button for SMS"
        android:id="@+id/button_SMS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
        -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove\n locations"
        android:id="@+id/remove_locs_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="removeAllLocations"/>


</RelativeLayout>
