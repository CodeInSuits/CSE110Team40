<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#90c3d4"
    tools:context="com.vapenaysh.jace.myapplication.remove"
    android:orientation="vertical"
    android:gravity="center_vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PARTNER INFORMATION"
        android:id="@+id/title_par_info"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="86dp"
        android:textColor="#087b5c"
        android:layout_above="@+id/show_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/show_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:textColor="#353535"
        android:layout_gravity="center_vertical" />


    <TextView
        android:id="@+id/show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name:"
        android:textStyle="bold"
        android:textColor="#353535"
        android:layout_above="@+id/show_email"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />

    <EditText
        android:id="@+id/partner_email"
        android:layout_width="wrap_content"
        android:textColor="#f7f7f7"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:background="#09b687"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/show_name"
        android:layout_alignStart="@+id/partner_name" />

    <EditText
        android:id="@+id/partner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f7f7f7"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email Address"
        android:background="#09b687"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/show_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Partner"
        android:textColor="#f7f7f7"
        android:background="#fd1c24"
        android:layout_marginTop="62dp"
        android:textSize="16sp"
        android:layout_below="@+id/partner_name"
        android:layout_alignEnd="@+id/partner_name"
        android:layout_toEndOf="@+id/show_email"
        android:layout_alignStart="@+id/partner_name" />

</RelativeLayout>
