<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#90c3d4"
    tools:context="com.vapenaysh.jace.myapplication.remove"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/partner_info_title"
        android:id="@+id/title_par_info"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:textColor="#087b5c" />



    <Button
        android:id="@+id/remove_partner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_partner"
        android:textColor="#f7f7f7"
        android:background="#fd1c24"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="16sp"
        android:id="@+id/phone_partner"
        android:layout_below="@id/title_par_info"
        android:layout_marginBottom="49dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:id="@+id/name_partner"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/title_par_info"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#ffffff"
        android:id="@+id/show_phone"
        android:textSize="30sp"
        android:layout_alignTop="@+id/phone_partner"
        android:layout_toRightOf="@+id/phone_partner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_name"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="30sp"
        android:layout_alignTop="@+id/name_partner"
        android:layout_toRightOf="@id/name_partner" />


</RelativeLayout>
