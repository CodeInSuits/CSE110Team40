<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_global_settings"
    tools:context="com.vapenaysh.jace.myapplication.GlobalSettings">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notification Settings"
        android:textSize="35dp"
        android:id="@+id/title"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration &amp; Sound Notification"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:id="@+id/both"
        android:gravity="center"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound Notification Only"
        android:id="@+id/soundonly"
        android:gravity="center"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_below="@+id/both"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration Notification Only"
        android:textSize="18dp"
        android:id="@+id/vibeonly"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_below="@+id/soundonly"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute"
        android:textAllCaps="false"
        android:id="@+id/mute"
        android:textSize="18dp"
        android:layout_below="@+id/vibeonly"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
